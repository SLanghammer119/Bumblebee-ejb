<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="bumblebee_persistence" transaction-type="JTA">
    <jta-data-source>jdbc/connectionBumblebee</jta-data-source>
    <class>com.bumblebee.model.Articlecolors</class>
    <class>com.bumblebee.model.Articledescriptions</class>
    <class>com.bumblebee.model.Articlematerials</class>
    <class>com.bumblebee.model.Articles</class>
    <class>com.bumblebee.model.Articlesizes</class>
    <class>com.bumblebee.model.Bankaccounts</class>
    <class>com.bumblebee.model.Care</class>
    <class>com.bumblebee.model.Colors</class>
    <class>com.bumblebee.model.Coupons</class>
    <class>com.bumblebee.model.Creditcards</class>
    <class>com.bumblebee.model.Customers</class>
    <class>com.bumblebee.model.Deliveryadresses</class>
    <class>com.bumblebee.model.Descriptions</class>
    <class>com.bumblebee.model.Materials</class>
    <class>com.bumblebee.model.Orderitems</class>
    <class>com.bumblebee.model.Orders</class>
    <class>com.bumblebee.model.Primecategories</class>
    <class>com.bumblebee.model.Shoppingcarts</class>
    <class>com.bumblebee.model.Shoppingitems</class>
    <class>com.bumblebee.model.Subcategories</class>
    <class>com.bumblebee.model.Units</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
